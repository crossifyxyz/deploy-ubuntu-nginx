##
# Default server configuration
#
server {
listen 80 default_server;
listen [::]:80 default_server;

root /var/www/html;

index index.html index.htm index.nginx-debian.html;

server_name _;

location / {}
}



server {

# SSL configuration
root /var/www/html;

index index.html index.htm index.nginx-debian.html;
server_name dev-api.crossify.xyz;


location / {
    proxy_pass http://localhost:8080;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection 'upgrade';
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Origin "$http_origin";
    proxy_set_header Credentials "true";  # Allow credentials
}

    listen [::]:443 ssl ipv6only=on;
    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/live/dev-api.crossify.xyz/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/dev-api.crossify.xyz/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = dev-api.crossify.xyz) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


listen 80 ;
listen [::]:80 ;
    server_name dev-api.crossify.xyz;
    return 404; # managed by Certbot
}